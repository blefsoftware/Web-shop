<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>User panel</title>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
    <a class="navbar-brand" href="/">IP WebShop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbarTop">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbarTop">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="btn btn-outline-light mr-sm-2" href="/">Home</a>
            </li>
            {{#if currentUser}}
                {{#each currentUser}}
                    <li class="nav-item">
                        <a class="btn btn-outline-light mr-sm-2" href="/userPanel/orders/{{this.uid}}">My order</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light mr-sm-2" href="/userPanel/cart/{{this.uid}}">Cart <span
                                class="badge badge-info">{{cartSize}}</span></a>
                    </li>
                {{/each}}
            {{/if}}
            {{#if userStatus}}
                <li class="nav-item">
                    <a class="btn btn-outline-light mr-sm-2" href="/logout">Logout [{{#if welcomeUser}}{{welcomeUser}}
                        - {{userStatus}}{{/if}}]</a>
                </li>
            {{/if}}
        </ul>
    </div>
</nav>
<div class="container" style="margin-top:100px">
    {{#if messageUserPanelState}}
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{messageUserPanelState}}</strong>
        </div>
    {{/if}}
    {{#if messageJson}}
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{messageJson}}</strong>
        </div>
    {{/if}}
    {{#if currentUser}}
        <table class="table table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Password</th>
                <th>Status</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each currentUser}}
                <tr>
                    <td>{{this.username}}</td>
                    <td>{{this.password}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        <a class="btn btn-outline-success btn-block" href="/userPanel/edit/{{this.uid}}">Edit</a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}
</div>
</body>
</html>