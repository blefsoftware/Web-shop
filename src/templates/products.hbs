<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>Products</title>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
    <a class="navbar-brand" href="/">IP WebShop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbarTop">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbarTop">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="btn btn-outline-light mr-sm-2" href="/adminPanel">Admin panel</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-light mr-sm-2" href="/adminPanel/products/new">New product</a>
            </li>
        </ul>
    </div>
</nav>
<div class="container" style="margin-top:100px">
    {{#if totalProducts}}
        <div class="alert alert-info">
            <strong>{{totalProducts}}</strong>
        </div>
    {{/if}}
    {{#if messageProductState}}
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{messageProductState}}</strong>
        </div>
    {{/if}}
    {{#if messageJson}}
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{messageJson}}</strong>
        </div>
    {{/if}}
    {{#if products}}
        <table class="table table-hover">
            <thead class="thead-dark">
            <tr>
                <th>PID</th>
                <th>Name</th>
                <th>Price</th>
                <th class="text-center">Info</th>
                <th>Category</th>
                <th colspan="2" class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each products}}
                <tr>
                    <td>{{this.pid}}</td>
                    <td>{{this.name}}</td>
                    <td>&euro;{{this.price}}</td>
                    <td>{{this.info}}</td>
                    <td>{{this.category.name}}</td>
                    <td class="text-right">
                        <a class="btn btn-outline-success btn-block"
                           href="/adminPanel/products/edit/{{this.pid}}">Edit</a>
                    </td>
                    <td class="text-left">
                        <form action="/adminPanel/products/delete/{{this.pid}}" method="post">
                            <button class="btn btn-outline-danger btn-block" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}
</div>
</body>
</html>