<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>User panel edit user</title>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
    <a class="navbar-brand" href="/">IP WebShop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbarTop">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbarTop">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="btn btn-outline-light mr-sm-2" href="/">Home</a>
            </li>
            {{#if userPanel}}
                {{#each userPanel}}
                    <li class="nav-item">
                        <a class="btn btn-outline-light mr-sm-2" href="/userPanel/{{this.uid}}">User panel</a>
                    </li>
                {{/each}}
            {{/if}}
        </ul>
    </div>
</nav>
<div class="container" style="margin-top:100px">
    {{#if messageUserPanelState}}
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>{{messageUserPanelState}}</strong>
        </div>
    {{/if}}
    {{#if userPanel}}
        {{#each userPanel}}
            <form action="/userPanel/update/{{this.uid}}" method="post">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Username</span>
                            </div>
                            <input type="text" class="form-control" name="userName" id="userName"
                                   value="{{this.username}}">
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Password</span>
                            </div>
                            <input type="password" class="form-control" name="passWord" id="passWord"
                                   value="{{this.password}}">
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Status</span>
                            </div>
                            <input type="text" class="form-control" placeholder="user" readonly>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <button type="submit" class="btn btn-info btn-block" name="btnUserUpdate" id="btnUserUpdate">
                        Update
                    </button>
                </div>
            </form>
        {{/each}}
    {{/if}}
</div>
</body>
</html>